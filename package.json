{
  "name": "book-tap",
  "description": "E-book management library",
  "scripts": {
    "start": "node dist/server.js",
    "dev-server": "export NODE_ENV=development&& node out/server.js",
    "dev-client": "yarn --cwd ./client start",
    "dev-demo": "concurrently -p \"[{name}]\" -n \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold,bgRed.bold\" --kill-others-on-fail \"npm:dev-server\" \"npm:dev-client\"",
    "dev-full": "rimraf out/ && tsc-watch -p tsconfig.json --onSuccess \"concurrently -p \"[{name}]\" -n \"LINT,SERVER\" -c \"bgBlue.bold,bgGreen.bold\" --kill-others-on-fail \"npm:lint\" \"npm:dev-server\"\"",
    "dev": "concurrently \"npm:dev-full\" \"npm:dev-client\"",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "ts-watch": "rimraf out/ && tsc-watch -p tsconfig.json",
    "ts-build": "rimraf dist/ && tsc --outDir dist/ --sourceMap false --incremental false",
    "build-server": "yarn ts-build",
    "build-client": "yarn --cwd ./client install && yarn --cwd ./client build",
    "build": "yarn build-server && yarn build-client"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^4.0.2",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dist-exiftool": "^10.53.0",
    "dotenv": "^8.1.0",
    "epub-metadata-parser": "^1.1.14",
    "express": "^4.17.3",
    "express-jwt": "^6.0.0",
    "express-session": "^1.16.2",
    "express-validator": "^6.2.0",
    "gm": "^1.23.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "node-exiftool": "^2.3.0",
    "pdf-image": "^2.0.0",
    "pg": "^7.12.1",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "tsc-watch": "^3.0.1",
    "typeorm": "^0.2.19",
    "typescript": "^3.6.3",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.0.1",
    "@types/connect-redis": "^0.0.11",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/express-jwt": "^0.0.42",
    "@types/express-session": "^1.15.14",
    "@types/gm": "^1.18.6",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/multer": "^1.3.10",
    "@types/passport-google-oauth20": "^2.0.2",
    "@types/redis": "^2.8.13",
    "concurrently": "^4.1.2",
    "node-sass": "^4.12.0",
    "tslint": "^5.20.0"
  }
}
